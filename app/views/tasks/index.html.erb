<h2> My list of tasks</h2>

<ul class="list-unstyled">
  <% @tasks.each do |task| %>
  <li>
    <span class="state-icon glyphicon glyphicon-<%= task.completed ? 'check' : 'unchecked' %>"></span>
    <%= link_to task.title, task_path(task) %>
    <%= link_to task_path(task),
          method: :delete,
          data: { confirm: "Delete #{task.title}?" } do %>
      <span class="glyphicon glyphicon-trash"></span>
    <% end %>
  </li>
  <% end %>
</ul>

<hr>

<i class="fa fa-plus">
  <%= link_to "Add new task", new_task_path %>
</i>
